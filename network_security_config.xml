<?xml version="1.0" encoding="utf-8"?>
<!-- File: network_security_config.xml -->
<network-security-config>
    <!-- ✅ Trust self-signed certificates for your API domain -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">athloscore.someexamplesof.ai</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Android emulator localhost -->
        <domain includeSubdomains="true">10.0.3.2</domain> <!-- Genymotion emulator localhost -->
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </domain-config>
    
    <!-- ✅ Default secure configuration for all other domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>