<?xml version="1.0" encoding="utf-8"?>
<!-- File: network_security_config.xml -->
<!-- ⚠️  DEVELOPMENT CONFIGURATION - Accepts self-signed certificates -->
<!-- ⚠️  For production: Remove cleartextTrafficPermitted and restrict trust-anchors -->
<network-security-config>
    <!-- ✅ Development API domain - accepts self-signed HTTPS certificates -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">athloscore.someexamplesof.ai</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Android emulator localhost -->
        <domain includeSubdomains="true">10.0.3.2</domain> <!-- Genymotion emulator localhost -->
        <trust-anchors>
            <!-- System certificates (CA-signed) -->
            <certificates src="system" />
            <!-- User-installed certificates (includes manually installed certs) -->
            <certificates src="user" />
        </trust-anchors>
    </domain-config>

    <!-- ✅ Default secure configuration for all other domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>